{
  "name": "lovable-offline-player",
  "version": "1.0.0",
  "description": "Offline music player for Lovable",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "rimraf dist && tsc && node scripts/build.js",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"cross-env NODE_ENV=development electron .\"",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "electron-store": "^8.1.0",
    "howler": "^2.2.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "typescript": "^5.0.0",
    "fs-extra": "^11.2.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0"
  }
}