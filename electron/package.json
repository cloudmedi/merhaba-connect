{
  "name": "lovable-offline-player",
  "version": "1.0.0",
  "description": "Offline music player for Lovable",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "rimraf dist && npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "tsc -p tsconfig.renderer.json && npm run build:css",
    "build:css": "tailwindcss -i ./renderer/index.css -o ./dist/renderer/index.css",
    "watch": "concurrently \"tsc -w\" \"tailwindcss -i ./renderer/index.css -o ./dist/renderer/index.css --watch\"",
    "dev": "concurrently \"npm run watch\" \"cross-env NODE_ENV=development electron .\"",
    "clean": "rimraf dist",
    "dist": "electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "make": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.lovable.offlineplayer",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "index.html",
      "renderer/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "electron-store": "^8.1.0",
    "howler": "^2.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.0.0",
    "fs-extra": "^11.2.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0",
    "postcss": "^8.0.0",
    "autoprefixer": "^10.0.0"
  }
}