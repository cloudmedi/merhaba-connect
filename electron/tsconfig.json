{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "renderer/**/*.ts",
    "renderer/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}