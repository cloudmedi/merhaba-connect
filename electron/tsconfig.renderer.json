{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/renderer",
    "module": "ESNext",
    "jsx": "react-jsx",
    "rootDir": "renderer",
    "paths": {
      "@/*": ["./renderer/*"]
    }
  },
  "include": [
    "renderer/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "main.ts",
    "preload.ts"
  ]
}